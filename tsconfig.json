{
    "compilerOptions": {
        "target": "esnext",
        "module": "esnext",
        "declaration": true,
        "outDir": "./Dist",
        "allowJs": true,
        "checkJs": true,
        "strict": true,
        "noImplicitAny": true,
        "noImplicitThis": true,
        "alwaysStrict": true,
        "moduleResolution": "node",
        "baseUrl": ".",
        "paths": {
            "droidxl": ["Dist"]
        },
        "esModuleInterop": true,
        "skipLibCheck": true
    },
    "include": ["Lib/**/*.ts", "Lib/baseline.css"],
    "exclude": ["node_modules", "Dist"]
}
